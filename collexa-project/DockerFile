# ======================
# FRONTEND BUILD
# ======================
FROM node:20-alpine AS client-build

WORKDIR /app/client

COPY client/package*.json ./
RUN npm install

COPY client/ .
RUN npm run build


# ======================
# BACKEND
# ======================
FROM node:20-alpine

WORKDIR /app/server

COPY server/package*.json ./
RUN npm install --production

COPY server/ .

# Copy frontend build into backend (for production)
COPY --from=client-build /app/client/dist ./public

ENV NODE_ENV=production

EXPOSE 5000

CMD ["node", "server.js"]
